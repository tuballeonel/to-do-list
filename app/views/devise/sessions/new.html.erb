<h3 class="header-title">Conecte-se</h3>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login-form">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, label: false, placeholder:"E-mail" %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, label: false, placeholder:"Senha" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

  <div class="form-actions">
    <%= f.button :submit, "ENTRAR", :class=>"bt btn-primary" %>
  </div>
 </div>
<% end %>


<div class="login-form">
  <%= render "devise/shared/links" %>
</div>

